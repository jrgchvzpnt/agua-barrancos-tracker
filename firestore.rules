rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin role
    function isAdmin() {
      // Checks if the user's UID exists in the 'admins' collection
      return exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Admin Collection
    // Only admins can read this collection. Writing is disabled from the client
    // for security. Admins must be added manually in the Firebase Console.
    match /admins/{userId} {
      allow read: if isAdmin();
      allow write: if false;
    }

    // Outages Collection
    // Read: Anyone can read outage reports.
    // Write: Only users listed in the 'admins' collection.
    match /outages/{outageId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Messages Collection
    // Read, Delete: Only users in the 'admins' collection.
    // Create: Anyone can send a message.
    match /messages/{messageId} {
      allow read, delete: if isAdmin();
      allow create: if true;
    }

    // Ads Collection
    // Read: Anyone can view ads.
    // Write: Only users in the 'admins' collection.
    match /ads/{adId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
